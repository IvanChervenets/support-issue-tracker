<div class="container">
  <div class="row">
    <div class="col-lg-offset-2 col-md-offset-2 col-xs-offset-3 col-sm-offset-2 col-lg-8 col-md-2 col-sm-2 col-xs-6">
    <h1>Listing Tickets</h1>

    <ul class="nav nav-tabs nav-justified">
      <li <%= "class = active" if @tab == 'open' %>><%= link_to "Open tickets", tickets_path(filter: 'open'), remote: false %></li>
      <li <%= "class = active" if @tab == 'on_hold' %>><%= link_to "On hold tickets", tickets_path(filter: 'on_hold'), remote: false %></li>
      <li <%= "class = active" if @tab == 'closed' %>><%= link_to "Closed tickets", tickets_path(filter: 'closed'), remote: false %></li>
      <li <%= "class = active" if @tab == 'my' %>><%= link_to "My tickets", tickets_path(filter: 'my'), remote: false %></li>
    </ul>

    <table class = "table-striped" width = "100%">
      <tr>
        <th class = "center">Customer</th>
        <th class = "center">Description</th>
        <th class = "center">Status</th>
        <th class = "center"></th>
        <th class = "center"></th>
      </tr>

      <% @tickets.each do |ticket| %>
        <tr>
          <td><%= ticket.customer_name %></td>
          <td><%= ticket.description %></td>
          <td><%= ticket.status.name %></td>
          <td><%= link_to 'Show', ticket_path(ticket) %></td>
          <td><%= link_to 'Edit', edit_ticket_path(ticket) %></td>

        </tr>
      <% end %>
    </table>
    </div>
  </div>
</div>